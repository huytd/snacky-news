html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title snacky news | #{category}
    link(href='https://hackcss.egoist.moe/hack.css' rel='stylesheet')
    style.
      html, body { background: #fafafa }
      a { color: #43a047; border-color: #43a047; text-decoration: none; border: none; }
      a:hover { background: #43a047; }
  body.hack
    div.container
      div(style="display: block; clear: both; padding: 10px;")
      div.grid.-left.-between
        a(href="/", class={"btn-block": category == "everything", "btn-ghost": category != "everything"}).cell.btn.btn-success= "#everything"
        a(href="/vietnamese", class={"btn-block": category == "vietnamese", "btn-ghost": category != "vietnamese"}).cell.btn.btn-success= "#vietnamese"
        a(href="/financial", class={"btn-block": category == "financial", "btn-ghost": category != "financial"}).cell.btn.btn-success= "#financial"
        a(href="/technology", class={"btn-block": category == "technology", "btn-ghost": category != "technology"}).cell.btn.btn-success= "#technology"
        a(href="/other", class={"btn-block": category == "other", "btn-ghost": category != "other"}).cell.btn.btn-success= "#other"
      div(style="display: block; clear: both; padding: 10px;")
      div.news-list
        each article, index in articles
          div.media
            div.media-left
              div.avatarholder= index + 1
            div.media-body
              div.media-heading
                a(href= "/view?url=" + article.url)= article.title
              div.media-content= article.domain + " | " + article.pubDate
      hr
